<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h1 class="modal-title red">Send us a message!</h1>
    </div>
    <div class="modal-body">
      <h4 class="page_title dark-green">Please provide us with details!</h4>
      <%= form_for @contact, remote: true, :html=> {:class => 'form-group'} do |f| %>
        <%= @contact.errors.full_messages.join(', ') %>

        <%= f.text_field :name, placeholder: 'name', required: true, class: 'form-control name' %>
        <%= f.telephone_field :phone, placeholder: 'phone number', required: true, class: 'form-control phone' %>
        <%= f.email_field :email, placeholder: 'email', required: true, class: 'form-control email' %>
        <%= f.text_area :message, placeholder: 'please provide us with all the details of your inquiry', class: 'form-control message' %>
        <%= f.submit 'Send', class: 'btn btn-default contact-submit'%>
      <% end %>
      <h4 class="contact-message"></h4>
    </div>
  </div>
</div>
